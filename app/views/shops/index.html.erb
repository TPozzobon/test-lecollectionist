<h2>Enseignes :</h2>

<% @shops.each do |shop| %>
  <ul>
    <li><%= shop.name %></li>
    <p>
      <strong>Horaires :</strong>
      <% shop.schedules.each do |schedule| %>
        <ul>
          <li><%= "#{schedule.day}  #{schedule.open_am&.strftime("%I:%M%p")}-#{schedule.close_am&.strftime("%I:%M%p")}, #{schedule.open_pm&.strftime("%I:%M%p")}-#{schedule.close_pm&.strftime("%I:%M%p")}" %></li>
        </ul>
      <% end %>
    </p>
  </ul>
<% end %>
